# <https://editorconfig.org>

root = true

[*]
charset = utf-8
thetabWidth = 4
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = false

[*.ts]
quote_type = single

[Makefile]
indent_style = tab

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2

[*.{yaml,yml}]
indent_style = space
indent_size = 4